<div>
  <div>

    <h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd>
   <img src="<%= @photo.image.url %>" alt="Photo">
  </dd>

  <dt>Caption</dt>
  <dd>
    <%= @photo.caption %>

  </dd>

  <dt>Owner</dt>
  <dd>
    <%= @photo.owner.username %>
  </dd>

  <dt>Posted</dt>
  <dd>
    <%= time_ago_in_words(@photo.created_at) %> ago
  </dd>

  <dt>Likes count</dt>
  <dd><%= @photo.likes_count %></dd>

  <dt>Comments count</dt>
  <dd><%= @photo.comments_count %></dd>

  <dt>Fans</dt>
<dd>
<% @photo.fans.each do |fan| %>
  <%= fan.username %>

<% end %>
</dd>
 <dt>Add a fan</dt>
  <dd>

   <form action="/insert_like" method="post">
  <input type="hidden" name="query_photo_id" value="<%= @photo.id %>">
  <button>Like</button>
</form>
  </dd>


<h2>Comments</h2>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <% @photo.comments.each do |comment| %>
  <tr>
    <td>
      <%= comment.owner.username %>
    </td>

    <td>
      <%= comment.body %>
    </td>

    <td>
      <%= time_ago_in_words(comment.created_at) %> ago
    </td>
  </tr>
  
  <% end %>
</table>

<h3>Add a new comment</h3>

<form action="/insert_comment" method="post">
  <input type="hidden" value="952" name="query_photo_id">
  
  <label for="browser_comment">Comment</label>
  <textarea id="browser_comment" name="query_body" placeholder="Enter a comment..."></textarea>

  <button>Add comment</button>
</form>
