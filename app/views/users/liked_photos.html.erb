<h2>Liked photos (<%= @photos.count %>)</h2>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th>Likes</th>
    <th></th>
  </tr>
  <% @photos.each do |photo| %>
    <tr>
      <td><%= image_tag(photo.image.url) if photo.image? %></td>
      <td><%= photo.owner.username %></td>
      <td><%= photo.caption %></td>
      <td><%= time_ago_in_words(photo.created_at) %> ago</td>
      <td><%= photo.likes_count %></td>
      <td><%= link_to "Show details", "/photos/#{photo.id}" %></td>
    </tr>
  <% end %>
</table>
